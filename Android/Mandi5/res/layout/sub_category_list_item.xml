<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="5dip" >

    <TextView
        android:id="@+id/list_item_txt1"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:text="Seller District"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/list_item_val1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/list_item_txt1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Akola"
        android:textColor="@color/gray"
        android:textSize="15dp" />

     <TextView
        android:id="@+id/list_item_txt2"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/list_item_txt1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:text="Price(per kg)"
        android:textColor="@color/black"
        android:textSize="15dp" />

   <TextView
        android:id="@+id/list_item_val2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_txt1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/list_item_txt2"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="670.00"
        android:textColor="@color/gray"
        android:textSize="15dp" />
   
   <ImageView android:id="@+id/image_id"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/arrow"
       android:layout_below="@+id/list_item_txt1"
       android:layout_marginTop="5dip"
       android:layout_alignParentRight="true"/>

     <TextView
        android:id="@+id/list_item_txt3"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/list_item_txt2"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:text="Pin Code"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/list_item_val3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_txt2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/list_item_txt3"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="282002"
        android:textColor="@color/gray"
        android:textSize="15dp" /> 
        


</RelativeLayout>