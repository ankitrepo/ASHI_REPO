<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/standard_layout1"
    android:baselineAligned="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/mandi5_header_layout" />
    </LinearLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/backgroundProductScreen" >

        <include layout="@layout/home" />

        <ExpandableListView
            android:id="@+id/lvExp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/backgroundProductScreen"
            android:listSelector="@color/backgroundProductScreen"
            android:scrollbars="none"
            android:visibility="visible" >
        </ExpandableListView>

        <ListView
            android:id="@+id/Right_drawer"
            android:layout_width="200dip"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#252525"
            android:listSelector="@color/black"
            android:scrollbars="none"
            android:visibility="visible" >
        </ListView>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>